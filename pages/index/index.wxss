/**index.wxss**/
.container {
  position: fixed; /*填充整个页面*/
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.userinfo {
  height: 10%;
  display: flex;
  flex-direction: row;
  padding: 0rpx 80rpx;
  align-items: center;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 64rpx;
  color: #aaa;
}

.usermotto {
  height: 90%;
  display: flex;
  flex-direction: column;
  padding: 10rpx 40rpx 50rpx 40rpx;
}

.area-up {
  flex: 1;
}

.area-bottom {
  flex: 1;
  display: flex;
}

.area-bottom-left {
  flex: 0 0 66.6666%;
  display: flex;
  flex-direction: column;
}

.area-bottom-right {
  flex: 0 0 33.3333%;
}

.area-left-up {
  flex: 1;
  display: flex;
}

.area-left-bottom {
  flex: 1;
  align-items: flex-start;
}

.btn {
  width: 100%;
  height: 100%;
}